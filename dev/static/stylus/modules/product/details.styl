.product-details

  &__body
    border 1px solid athens-gray
    border-radius 2px
    padding: 20px

  &-navigation
    display: flex
    align-items: center
    background-color: white
    box-shadow 0 1px 5px 0 rgba(0, 0, 0, 0.1), 0 5px 10px 0 rgba(0, 0, 0, 0.05)
    padding: 10px 0
    margin 10px 0 20px


    &__item
      display: flex
      align-items: center
      font-size: 16px
      font-weight: 600
      color tundora
      height: 30px
      line-height: 30px
      border-right 1px solid alto
      padding: 0 20px

      & > *
        margin-right: 15px
        &:last-child
          margin-right: 0

      &:last-child
        border-right 0


      &:hover,
      &.tabs-navigation__item--active
        color blaze-orange
        a
          color blaze-orange
      a
        color tundora

.product-table
  width: 100%
  border-collapse collapse

  &__title
    color blaze-orange
    font-size: 16px
    font-weight: 700
    margin-bottom: 10px
    display: block

  &__row
    &:nth-child(odd)
      background-color: athens-gray

  &__cell
    width: 50%
    height: 40px
    padding: 10px 20px


