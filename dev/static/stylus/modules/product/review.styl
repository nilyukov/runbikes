.reviews
  &__header
    display: flex
    align-items: center
    padding-bottom: 20px
    @media screen and (max-width: phoneSize)
      flex-direction column
      align-items: flex-start

    & > *
      margin-right: 20px
      @media screen and (max-width: phoneSize)
        margin-right: 0
        margin-bottom: 15px
      &:last-child
        margin-right: 0
        @media screen and (max-width: phoneSize)
          margin-bottom: 0

    .title-section
      margin-bottom: 0


.review
  border-top 1px solid athens-gray
  padding-top: 30px
  margin-bottom: 20px
  color tundora
  &:last-child
    margin-bottom: 0

  &__header
    display: flex
    align-items: flex-start
    margin-bottom: 20px

    & > *
      margin-right: 20px
      &:last-child
        margin-right: 0

  &__body
    & > *
      margin: 15px 0
      &:first-child
        margin-top: 0
      &:last-child
        margin-bottom: 0

  &__add
    margin-left:  auto
    @media screen and (max-width: phoneSize)
      margin-left: 0

  &-author
    &__photo
      max-width 100%
      &-wrapper
        size(50px)
        background-color: athens-gray
        border-radius 50%
        display: flex
        align-items: center
        justify-content: center
        overflow hidden

      &-text
        font-size: 16px

    &__info
      display: flex
      flex-direction column

    &__name
      font-size: 16px
      font-weight: 700
      margin-bottom: 5px

  &__row
    display: flex
    flex-direction column

  &__label
    font-weight: 700