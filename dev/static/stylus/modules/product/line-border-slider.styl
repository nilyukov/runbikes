.products-line-border-slider

  &__header
    display: flex
    align-items:center
    margin-bottom: 20px
    .title-section
      margin-bottom: 0
  &__body
    margin-left: -15px
    margin-right: -15px
  .product-prev
    margin 0 15px

    &:hover
      box-shadow none

  &__navigation
    display: flex
    margin-left: auto
  &__btn
    size(40px)
    display flex
    align-items center
    justify-content center
    border 1px solid alto
    border-radius 2px
    &.products-line-border-slider__btn
      &--prev
        border-radius 2px 0 0 2px
        border-right: 0
      &--next
        border-radius 0 2px 2px 0

  &__icon
    size (15px)
    fill blaze-orange

