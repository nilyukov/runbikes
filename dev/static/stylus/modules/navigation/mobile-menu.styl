.mobile-menu
  &.mobile-menu--open
    .mobile-menu
      &__content
        display block
        @media screen and (max-width: phoneSize)
          left 0
  &__toggle
    align-items center
    background-color blaze-orange
    color white
    cursor pointer
    display flex
    justify-content center
    height 50px
    & > *
      margin-right 20px
      @media screen and (max-width: phoneSize)
        margin-right 0
      &:last-child
        margin-right 0

    @media screen and (max-width: phoneSize)
      size(50px)
      border-right 1px solid rgba(75, 75, 75, 0.2)
      background-color white
      margin-right 15px
      .sandwich
        &__line
          background-color tundora
    .mobile-menu
      &__title
        @media screen and (max-width: phoneSize)
          display none

  &__content
    box-shadow 0 5px 30px 0 rgba(75, 75, 75, 0.5)
    left 15px
    position absolute
    right 15px
    top 0
    z-index 5
    display none
    @media screen and (max-width: phoneSize)
      bottom 0
      left -100%
      right auto
      width 100%
      overflow auto
      position fixed
      display block
      box-shadow none

  &__header
    display flex
    align-items center
    background-color blaze-orange
    color white
    height 50px
    justify-content center
    cursor pointer
    padding-left 15px
    & > *
      margin-right 20px
      &:last-child
        margin-right 0
  &__title
    font-size 16px
    font-weight 600
  &__close
    size(50px)
    align-items center
    border-left 1px solid rgba(0, 0, 0, 0.05)
    cursor pointer
    display flex
    justify-content center
    margin-left auto
    &-icon
      size(20px)
      fill white
  &__footer
    align-items center
    background-color alto
    display flex
    justify-content center
    padding 10px 15px
    & > *
      margin-right 20px
      &:last-child
        margin-right 0

  &__phone
    display flex
    flex-direction column
    &-number
      color mine-shaft
      margin-bottom 5px
    &-link
      color dusty-gray
      font-size 12px
      text-decoration underline
    &-text
      color dusty-gray
      font-size 12px