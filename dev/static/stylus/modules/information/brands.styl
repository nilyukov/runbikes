.brands
  border-top: 1px solid alto
  padding-top: 30px
  &__list
    display flex
    flex-wrap wrap
    justify-content: space-between
    margin-bottom: -45px
    & > *
      flex 0 0 16%
      width: 16%
      margin-bottom: 45px
      @media screen and (max-width: tabletSize)
        flex 0 0 25%
        width: 25%
      @media screen and (max-width: phoneSize)
        flex 0 0 50%
        width: 50%


    &-small
      display flex
      flex-wrap wrap
      @media screen and (max-width: 1139px)
        flex-wrap nowrap
      & > *
        margin-right: 10px
        margin-bottom: 10px
        &:nth-child(3n+3)
          margin-right 0
          @media screen and (max-width: tabletSize)
            margin-right 10px

.brand
  display flex
  flex-direction column
  align-items center
  color mine-shaft
  &__img
    margin-bottom 5px
    height 80px
    width 109px
    transition all linear .3s
    &:hover
      box-shadow 0 5px 10px 0 rgba(0, 0, 0, 0.1), 0 2px 5px 0 rgba(0, 0, 0, 0.05)

  &-info
    display: flex
    align-items: flex-start
    @media screen and (max-width: phoneSize)
      flex-direction:column
    & > *
      margin-right: 30px
      &:last-child
        margin-right: 0
        @media screen and (max-width: phoneSize)
          margin-bottom: 0
      @media screen and (max-width: phoneSize)
        margin-bottom: 30px
        margin-right: 0
    &__tablet
      flex 0 0 255px
      width: 255px
      @media screen and (max-width: phoneSize)
        flex 1
        width: 100%
      & > *
        margin: 20px 0
        &:first-child
          margin-top: 0
        &:last-child
          margin-bottom: 0
  &__logo
    border: 1px solid alto
    border-radius 2px
    padding: 40px
    display: flex
    align-items: center
    justify-content: center
    .brand__img
      height: auto
      width: auto
      max-width 100%
      &:hover
        box-shadow none
  &__description
    flex 1
    width: 100%
    & > *
      margin: 20px 0
      &:first-child
        margin-top: 0
      &:last-child
        margin-bottom: 0
  &__certificates
    flex 0 0 255px
    width: 255px
    @media screen and (max-width: phoneSize)
      flex 1
      width: 100%
    &-label
      display: block
      font-weight: 700
      line-height: 1.79
      margin-bottom: 15px

  &__certificate
    border: 1px solid alto
    border-radius 2px
    padding: 20px
    display: flex
    align-items: center
    justify-content: center
