.filter
  background-color: white
  position relative

  &.filter--open
    @media screen and (max-width: tabletSize)
      display: block

  @media screen and (max-width: tabletSize)
    box-shadow 0 5px 30px 0 rgba(75, 75, 75, 0.5)
    left: -1px
    display: none
    position: absolute
    top: 0
    z-index: 5

  @media screen and (max-width: phoneSize)
    top: 55px


  &__body
    & > *
      margin: 20px 0
      &:first-child
        margin-top: 0
      &:last-child
        margin-bottom: 0

  &__block
    padding: 20px
    border 1px solid alto
    border-radius 2px
    & > *
      margin: 10px 0
      &:first-child
        margin-top: 0
      &:last-child
        margin-bottom: 0

  &__title
    display: block
    font-weight: 700
    line-height: 2.14
    color blaze-orange
    margin-bottom: 10px

  &-list
    &__item
      margin-bottom: 10px
      &:last-child
        margin-bottom: 0
    &__link
      color tundora
      font-weight: 600

  &__buttons
    display: flex
    & > *
      flex 1
      width: 100%
      margin-right: 15px
      &:last-child
        margin-right: 0

  &__label
    color tundora
    display: block
    font-weight: 700
    margin-bottom: 10px

  &-mobile
    &__toggle
      display: none
      align-items: center
      border: 1px solid alto
      border-radius 2px
      cursor pointer
      line-height: 38px
      height: 40px
      padding: 0 15px
      @media screen and (max-width: tabletSize)
        display: flex
        font-size: 12px

      & > *
        margin-right: 10px
        &:last-child
          margin-right: 0

      &-icon
        size(12px)
        fill blaze-orange

    &__close
      size(40px)
      display: none
      align-items: center
      background-color: blaze-orange
      cursor: pointer
      justify-content: center
      left: 100%
      position: absolute
      top: 0
      z-index: 1
      @media screen and (max-width: tabletSize)
        display: flex

      &-icon
        size(18px)
        fill white
