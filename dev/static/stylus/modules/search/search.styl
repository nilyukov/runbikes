.search
  position relative
  &.search--open
    .search__body
      display block
  &__icon
    size(20px)
    fill blaze-orange
    cursor pointer


  &__body
    display none
    padding 20px
    background-color white
    box-shadow 0 5px 10px 0 rgba(0, 0, 0, 0.21), 0 10px 20px 0 rgba(0, 0, 0, 0.1)
    position absolute
    right 0
    top -35px
    width 550px



  &__form
    align-items center
    display flex
    @media screen and (max-width: phoneSize)
      flex-direction: column

  &__input
    height 50px
    line-height 48px
    border 1px solid alto
    border-right 0
    border-radius 2px 0 0 2px
    background-color transparent
    padding 0 50px 0 20px
    color tundora
    width 100%
    @media screen and (max-width: phoneSize)
      border-right: 1px solid alto
      border-radius 2px

    &::placeholder
      color placeholder-color
    &-wrapper
      position relative
      flex 1
      background-color: white

      @media screen and (max-width: phoneSize)
        width: 100%
        margin-bottom: 15px

  &__clear
    width 40px
    position absolute
    top 0
    right 0
    bottom 0
    display flex
    justify-content center
    align-items center
    cursor pointer
    z-index 1
    @media screen and (max-width: phoneSize)
      display: none

    &-icon
      size(16px)
      fill rgba(75, 75, 75, 0.5)

  &__btn
    background-color blaze-orange
    padding 0 15px
    height 50px
    font-weight 700
    border 0
    color white
    cursor pointer
    border-radius 0 4px 4px 0
    flex 0 0 auto
    @media screen and (max-width: phoneSize)
      width: 100%
      border-radius 4px
  &-result
    &__header
      margin-bottom: 30px
      & > *
        margin: 15px 0
        &:first-child
          margin-top: 0
        &:last-child
          margin-bottom: 0

    &__request
      background-color: athens-gray
      border-radius 4px
      padding: 20px
      & > *
        margin 15px 0
        &:first-child
          margin-top: 0
        &:last-child
          margin-bottom: 0
    &__label
      color: tundora
      display: block
      font-weight: 700