.s-banner
  @media screen and (max-width: phoneSize)
    padding-top 0
  .container
    @media screen and (max-width: phoneSize)
      padding 0

.banner
  background-image linear-gradient(255deg, #ffb800, #ff6d00)
  height 300px
  padding 0 90px
  position relative
  border-radius 4px
  overflow hidden
  @media screen and (max-width: phoneSize)
    padding 0 15px
    height 200px
  &__item
    outline none
  &__navigation
    size(50px)
    border-radius 50%
    background-color rgba(white, .2)
    display flex
    cursor pointer
    justify-content center
    align-items center
    position absolute
    top 50%
    margin-top: -25px
    transition all linear .3s
    @media screen and (max-width: phoneSize)
      display none
    &.banner__navigation
      &--prev
        left 30px
      &--next
        right 30px
    &:hover
      background-color rgba(white, .5)
      .banner__navigation-icon
        fill rgba(black, .8)
    &-icon
      height 17px
      width 10px
      fill rgba(black, .5)

  &__content
    display: flex
    padding 30px 0
    justify-content space-between


  &__body
    color white
    flex 1
    @media screen and (max-width: phoneSize)
      max-width 48%
    .btn
      @media screen and (max-width: phoneSize)
        display none
  &__title
    display block
    font-size 50px
    line-height 1
    margin-bottom 15px
    @media screen and (max-width: phoneSize)
      font-size 30px

  &__descr
    display block
    font-size 18px
    line-height 1.67
    margin-bottom 40px
    @media screen and (max-width: phoneSize)
      font-size 12px

  &__img
    max-width 100%
    max-height 240px
    @media screen and (max-width: phoneSize)
      max-height 140px
    &-wrapper
      flex 0 0 45%
      width 45%
      text-align center
      @media screen and (max-width: phoneSize)
        flex 0 0 49%
        width 49%

  &__dot
    size(10px)
    border-radius 50%
    background-color rgba(38, 38, 38, 0.5);
    display block
    cursor pointer
  &__dots
    position absolute
    left 50%
    bottom 20px
    transform translateX(-50%)
    z-index 2
    @media screen and (max-width: phoneSize)
      bottom 10px
    .slick-dots
      display flex
      align-items center
      li
        margin-right 10px
        &:last-child
          margin-right 0
        &.slick-active
          .banner__dot
            background-color white