.content-block
  @media screen and (max-width: phoneSize)
    font-size: 12px
  & > *
    margin: 20px 0
    &:first-child
      margin-top: 0
    &:last-child
      margin-bottom: 0
  &__row
    display: flex
    @media screen and (max-width: phoneSize)
      flex-direction column
    & > *
      margin-right: 30px

      @media screen and (max-width: phoneSize)
        margin-right: 0
        margin-bottom: 20px
      &:last-child
        margin-right: 0
        @media screen and (max-width: phoneSize)
          margin-bottom: 0
  &__col
    flex 1
    width: 100%

  &__img
    max-width 100%

  ul
    margin: 0
    padding: 0
    &.no-dots
      li
        padding-left: 0
        &:before
          display: none
  li
    margin: 0
    padding: 0
    padding-left: 35px
    line-height: 1.79
    position relative

    &:before
      content ''
      size(4px)
      background-color: tundora 
      border-radius 50%
      left: 10px
      top: 10px
      position: absolute

.s-static
  & + .s-advantages
    padding-bottom 30px