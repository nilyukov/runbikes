.about
  display flex
  @media screen and (max-width: tabletSize)
    flex-direction column
  &__body
    flex 1
    @media screen and (max-width: tabletSize)
      order 2
    .tab
      & > *
        margin 15px 0
        &:first-child
          margin-top 0
        &:last-child
          margin-bottom 0

  & > *
    margin-right 30px
    &:last-child
      margin-right 0
  &-navigation
    flex 0 0 255px
    width 255px

    @media screen and (max-width: tabletSize)
      display flex
      order 1
      flex 1
      width 100%
      margin-bottom 30px

    @media screen and (max-width: phoneSize)
      overflow auto
      overflow-y hidden
    &__item
      line-height 48px
      border-bottom 2px solid alto
      padding-left 10px
      height 50px
      min-width: 150px
      @media screen and (max-width: tabletSize)
        flex 1
        margin-right 30px
        padding-left 0
      &:last-child
        margin-right 0
        @media screen and (max-width: tabletSize)
          margin-right 0
      &.tabs-navigation__item--active
        border-bottom-color blaze-orange
      &:hover
        border-bottom-color: blaze-orange