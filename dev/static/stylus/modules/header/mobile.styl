.header__mobile
  display none

  position relative
  z-index 5
  @media screen and (max-width: tabletSize)
    display block
  @media screen and (max-width: phoneSize)
    box-shadow 0 1px 3px 0 rgba(38, 38, 38, 0.5), inset 0 -1px 0 0 #eef2f4

  .container
    display flex
    justify-content space-between
    @media screen and (max-width: phoneSize)
      justify-content flex-start
      align-items center
      padding-left 0
    & > *
      flex 0 0 48%
      width 48%
      @media screen and (max-width: phoneSize)
        flex 0 0 auto
        width auto
  .search
    @media screen and (max-width: phoneSize)
      display none


