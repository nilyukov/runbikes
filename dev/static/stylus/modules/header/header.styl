@import "mobile.styl"

.header
  border-bottom 1px solid athens-gray
  @media screen and (max-width: tabletSize)
    border-bottom 0
  &__nav
    &.header__nav
      &-right
        margin-left auto

  &__top
    padding 10px 0
    background-color athens-gray
    @media screen and (max-width: phoneSize)
      display none

  &__main
    padding 25px 0
    @media screen and (max-width: phoneSize)
      display none



  &__content
    align-items center
    display flex



  &__phones
    display flex
    margin-right 90px
    > *
      margin-right 30px
      &:last-child
        margin-right 0

  &__phone
    display block
    font-size 16px
    font-weight 600
    color tundora
    white-space nowrap


  &__shop
    display flex
    margin-left auto
    flex: 0 0 270px
    justify-content space-between
    width 270px
    > *
      margin-right 10px
      &:last-child
        margin-right 0

  &-address
    display flex
    flex 0 0 190px
    width 190px
    @media screen and (max-width: tabletSize)
      display none
    &__icon
      flex 0 0 15px
      fill silver-chalice
      height 21px
      width 15px


    &__text
      color tundora
      font-size 12px
      line-height 1.67

    > *
      margin-right 15px
      &:last-child
        margin-right 0


  &-goods
    &__price
      display block
      font-size 16px
      font-weight 600
      color tundora
      white-space nowrap

    &__count
      display block
      font-size 12px
      line-height 1.67
      color silver-chalice
  &-basket
    align-items center
    background-color wild-sand
    display flex
    height 40px
    padding 0 20px
    border-radius 20px
    cursor pointer
    &__icon
      size(20px)
      fill blaze-orange

    &__text
      color tundora
      font-weight 600
    > *
      margin-right 15px
      &:last-child
        margin-right 0

  &__logo
    margin-right 40px

  &__link
    display block
    font-size 12px
    line-height 1.67
    color silver-chalice
    text-decoration underline

  &__description
    display block
    font-size 12px
    line-height 1.67
    color silver-chalice

  &__search
    margin-left auto

  &__menu
    @media screen and (max-width: tabletSize)
      display none
  &__item
    @media screen and (max-width: tabletSize)
      display none
    &.header__item
      &--mobile
        @media screen and (max-width: tabletSize)
          display block
