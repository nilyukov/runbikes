mixin reviewRow(label, value)
    .review__row
        span.review__label= label
        span.review__value= value


.reviews
    .reviews__header
        h2.title-section
            |   Отзывы
        .product-info__rating
            .product-info__rating-stars
                +icon('star','product-info__rating-icon--active')
                +icon('star','product-info__rating-icon--active')
                +icon('star','product-info__rating-icon--active')
                +icon('star','product-info__rating-icon--active')
                +icon('star','product-info__rating-icon')
            span.product-info__text
                |   4.0 балла на основе 3 оценок
        a(href='').btn.btn--bg-orange.btn--inline.review__add
            |   Оставить отзыв
    .reviews__body
        .review
            .review__header
                .review-author__photo-wrapper
                    img(src='http://via.placeholder.com/70x70' alt='Фото автора отзыва').review-author__photo
                .review-author__info
                    span.review-author__name
                        |   Диана Мехович
                    span.review-author__mark
                        |   Оценка: 5
            .review__body
                +reviewRow('Достоинства', 'Хороший беговел')
                +reviewRow('Недостатки', 'Нет')
                +reviewRow('Комментарий', 'У меня два мальчика и оба в восторге от беговелов. Безопасный и устойчивый.')
        .review
            .review__header
                .review-author__photo-wrapper
                    span.review-author__photo-text
                        |   Е
                .review-author__info
                    span.review-author__name
                        |   Елена
                    span.review-author__mark
                        |   Оценка: 3
            .review__body
                +reviewRow('Достоинства', 'Неплохой беговел')
                +reviewRow('Недостатки', 'Сломался через месяц.')
                +reviewRow('Комментарий', 'Пришлось сдать в сервисный центр.')
        .review
            .review__header
                .review-author__photo-wrapper
                    span.review-author__photo-text
                        |   П
                .review-author__info
                    span.review-author__name
                        |   Павел
                    span.review-author__mark
                        |   Оценка: 4
            .review__body
                +reviewRow('Достоинства', 'Нормальный детский велик')
                +reviewRow('Недостатки', 'Не обнаружил')
                +reviewRow('Комментарий', 'Довольно устойчивый и приятно выглядящий. Без излишеств.')