.filter__body
    .filter__block
        span.filter__title
            |   Подкатегории
        ul.filter-list
            each link in ['беговелы для детей от 2 лет', 'беговелы для детей от 3 лет', 'беговелы Micro', 'беговелы Puky', 'беговелы Strider', 'беговелы Scool']
                li.filter-list__item
                    a(href='').filter-list__link= link
    .filter__block
        span.filter__title
            |   Подбор параметров
        .filter__row
            .select
                .select__header
                    span.select__current
                        |   Пол
                    +icon('down-chevron','select__icon')
                .select__body
                    ul.select-list
                        li.select-list__item
                            |   Мужской
                        li.select-list__item
                            |   Женский
        .filter__row
            .filter-color
                span.filter__label
                    |   Цвет
                ul.color-list
                    each color in ['000000', '666666','ffffff','84d6ff','3333ff','666666', 'ff0500', 'ff6500', '663300',]
                        if(color === 'ffffff')
                            li.color-list__item.color-list__item--white(style=`background-color:#${color}`)
                        else
                            li.color-list__item(style=`background-color: #${color}`)
        .filter__buttons
            button.btn.btn--contour-gray
                |   Сброс
            button.btn.btn--bg-orange
                |   Подбор