section.s-category-slider
    .container
        .category-slider
            .category-slider__header
                .category-slider__title
                    |   Официальные дилеры Micro, PUKY, Hudora, Globber
            .category-slider__body
                .js-category-slider
                    -
                        var listCategory = [
                           {icon:'tag', name: 'Найдете дешевле - сделаем скидку'},
                           {icon:'fast-delivery', name: 'Доставка по Минску день в день, на следующий день, через день'},
                           {icon:'recommended', name: 'Расширенная европейская гарантия от производителя'},
                           {icon:'medal', name: 'Официальный сервисный центр'},
                           {icon:'customer-service', name: 'Профессиональная консультация от продавцов'},
                           {icon:'map', name: 'Доставка по всей Беларуси'}
                           ];
                    each slider in listCategory
                        .category-slider__item
                            +icon(slider.icon,'category-slider__icon')
                            span.category-slider__text= slider.name

            .category-slider__dots
